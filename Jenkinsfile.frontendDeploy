pipeline {
    agent any

    environment {
        KUBECONFIG = '/var/jenkins_home/.kube/config'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/melike1051/hello-ziraat1.git'
            }
        }

        stage('Deploy Frontend with Helm') {
            steps {
                sh '''
                    kubectl config use-context docker-desktop

                    echo "Deploying frontend with Helm..."
                    helm upgrade --install frontend ./chart-frontend --namespace default
                '''
            }
        }
    }
}
